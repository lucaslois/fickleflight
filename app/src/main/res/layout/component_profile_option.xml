<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/optionIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:background="@color/settings_icon_background"
        app:contentPadding="5dp"
        android:src="@drawable/ic_launcher_background"
        app:shapeAppearanceOverlay="@style/RoundedCornersIcons" />

    <TextView
        android:id="@+id/optionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/text_content"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/flight_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/optionBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_rounded_rectangle_green"
        android:padding="4dp"
        android:layout_marginHorizontal="8dp"
        android:text="NEW"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="gone" />
</LinearLayout>
