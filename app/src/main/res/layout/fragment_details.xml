<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- ImageView para la imagen de fondo -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_image"
        android:scaleType="centerCrop" />

    <!-- Contenido de la interfaz de usuario encima de la imagen de fondo -->

    <!-- Bottom drawer -->
    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <!-- Incluye tu toolbar u otros elementos aquÃ­ -->
        <include
            android:id="@+id/includeToolbar"
            layout="@layout/back_toolbar_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"

        />


        <!-- Otros elementos de interfaz de usuario -->

    </LinearLayout>



</RelativeLayout>
