<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentSearchFlight"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.searchFlight.SearchFlightFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/searchCardView"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RadioGroup
                android:id="@+id/flightSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/oneWayOption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_bold"
                    android:text="One way" />

                <RadioButton
                    android:id="@+id/roundTripOption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_bold"
                    android:text="Round trip" />
            </RadioGroup>

            <EditText
                android:id="@+id/selectedDeparture"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Select Departure"
                android:inputType="text" />

            <EditText
                android:id="@+id/selectedArrival"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Select Arrival"
                android:inputType="text" />

            <!-- Date Picker EditText -->
            <EditText
                android:id="@+id/selectedDate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Select Date"
                android:focusable="false"
                android:clickable="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/passengers"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="1 adult"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/selectedClass"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Economic"
                    android:inputType="text" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSearchFlights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:backgroundTint="@color/orange"
                android:text="Search" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
