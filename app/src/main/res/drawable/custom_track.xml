<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="@color/custom_color_switch_track_active"/>
            <stroke android:width="2dp" android:color="@color/custom_color_switch_track_border_active" />
            <padding android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="@color/custom_color_switch_track_inactive"/>
            <stroke android:width="2dp" android:color="@color/custom_color_switch_track_border_inactive" />
            <padding android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp" />
        </shape>
    </item>
</selector>
